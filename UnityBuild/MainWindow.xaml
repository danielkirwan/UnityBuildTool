<Window x:Class="UnityBuild.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="Unity Build Tool"
        Height="600" Width="700"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="BorderBrush" Value="#FF3F3F3F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>


        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="BorderBrush" Value="#FF3F3F3F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- 3-column layout -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>

                            <!-- Background -->
                            <Border Grid.ColumnSpan="3"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Selected item -->
                            <ContentPresenter Grid.Column="0"
                                              Margin="6,0,6,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}" />

                            <!-- Dropdown arrow -->
                            <ToggleButton Grid.Column="2"
                                          Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          Foreground="{TemplateBinding Foreground}"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press">
                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                      Fill="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </ToggleButton>

                            <!-- Popup (dropdown) -->
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade">

                                <Border Background="#FF2A2A2A"
                                        BorderBrush="#FF3F3F3F"
                                        BorderThickness="1">

                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"
                                                    HorizontalAlignment="Center"/>
                                    </ScrollViewer>

                                </Border>
                            </Popup>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BUTTON STYLE -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TEXTBLOCK STYLE -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <TabControl x:Name="MainTabs"
                Background="#FF1E1E1E"
                BorderThickness="0">


        <TabItem Header="Build">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="38*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Unity Build Tool"
                               FontSize="22"
                               FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Top"/>

                    <!-- Unity Version -->
                    <StackPanel Orientation="Horizontal" Margin="0,40,0,10" Grid.Row="1" Grid.ColumnSpan="2">
                        <TextBlock Text="Unity Version:" Width="140"/>
                        <ComboBox x:Name="UnityVersionCombo" Width="250"/>
                    </StackPanel>

                    <!-- Project Path -->
                    <StackPanel Orientation="Horizontal" Margin="0,80,0,10" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Project Path:" Width="140"/>
                        <TextBox x:Name="ProjectPathBox" Width="300"/>
                        <Button Content="Browse..." Width="90" Click="BrowseProject_Click"/>
                    </StackPanel>

                    <!-- Output Path -->
                    <StackPanel Orientation="Horizontal" Margin="0,45,0,10" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Build Output:" Width="140"/>
                        <TextBox x:Name="BuildOutputBox" Width="300"/>
                        <Button Content="Browse..." Width="90" Click="BrowseOutput_Click"/>
                    </StackPanel>

                    <!-- Build Name -->
                    <StackPanel Orientation="Horizontal" Margin="0,45,0,10" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Build File Name:" Width="140"/>
                        <TextBox x:Name="BuildNameBox" Width="300"/>
                    </StackPanel>

                    <!-- Version -->
                    <StackPanel Orientation="Horizontal" Margin="0,40,0,10" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Version:" Width="140"/>
                        <TextBox x:Name="VersionBox" Width="300"/>
                    </StackPanel>

                    <!-- Build Type -->
                    <StackPanel Orientation="Horizontal" Margin="0,40,0,10" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Build Type:" Width="140"/>
                        <ComboBox x:Name="BuildTypeCombo" Width="250">
                            <ComboBoxItem Content="release" IsSelected="True"/>
                            <ComboBoxItem Content="development"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Build Button + Progress -->
                    <Grid Grid.Row="7" Margin="0,20,0,0" Grid.ColumnSpan="2">
                        <Button x:Name="BuildButton"
                                Content="Build Game"
                                Width="150"
                                HorizontalAlignment="Left"
                                Click="Build_Click"/>

                        <ProgressBar x:Name="BuildProgressBar"
                                     Height="25" Width="300"
                                     HorizontalAlignment="Right"
                                     Visibility="Collapsed"
                                     IsIndeterminate="True"/>
                    </Grid>

                </Grid>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Icon Generator">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Unity Icon Generator"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Source Image -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
                        <TextBlock Text="Source Image:" Width="150"/>
                        <TextBox x:Name="IconSourcePath" Width="300"/>
                        <Button Content="Browse..." Width="90" Click="BrowseIconSource_Click"/>
                    </StackPanel>

                    <!-- Output Folder -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="2">
                        <TextBlock Text="Output Folder:" Width="150"/>
                        <TextBox x:Name="IconOutputPath" Width="300"/>
                        <Button Content="Browse..." Width="90" Click="BrowseIconOutput_Click"/>
                    </StackPanel>

                    <!-- Platforms -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Grid.Row="3">
                        <TextBlock Text="Generate For:" Width="150"/>
                        <CheckBox x:Name="GenWindows" Content="Windows (.ico)" IsChecked="True" Margin="0,0,20,0"/>
                        <CheckBox x:Name="GenMac" Content="macOS (.icns)" IsChecked="True" Margin="0,0,20,0"/>
                        <CheckBox x:Name="GenAndroid" Content="Android (Mipmaps)" IsChecked="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Vertical">

                        <!-- Generate Icons Button -->
                        <Button Content="Generate Icons"
                            Width="200" Height="40"
                            Click="GenerateIcons_Click"/>

                        <!--Add to unity -->
                        <Button Content="Apply Icons to Unity"
                    Width="220" Height="40" Margin="0,10,0,0"
                    Click="ApplyIconsToUnity_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

    </TabControl>

</Window>
